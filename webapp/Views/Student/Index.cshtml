@model webapp.ViewModels.Student.IndexViewModel;
@{
  ViewData["Title"] = "Alunos";
}

<div class="container-fluid">
  <div class="row">
    <div class="col-12">
      <h3 class="text-center mb-5">Cadastro de Alunos</h3>

      <form asp-action="CreateStudent" asp-controller="Student" method="POST" class="mt-4">
        <div class="row">
          <div class="form-group col-4">
            <label asp-for="Name" class="control-label">Nome</label>
            <input asp-for="Name" class="form-control" placeholder="Nome do Aluno">
            <span asp-validation-for="Name" class="text-danger"></span>
          </div>
          <div class="form-group col-4">
            <label asp-for="Email" class="control-label">Email</label>
            <input asp-for="Email" type="email" class="form-control" aria-describedby="emailHelp" placeholder="Email">
            <span asp-validation-for="Email" class="text-danger"></span>
          </div>
          <div class="form-group col-2">
            <label asp-for="Login" class="control-label">Login</label>
            <input asp-for="Login" class="form-control" placeholder="Login">
            <span asp-validation-for="Login" class="text-danger"></span>
          </div>
          <div class="form-group col-2">
            <label asp-for="Telephone" class="control-label">Telefone</label>
            <input asp-for="Telephone" class="form-control" placeholder="Telefone">
            <span asp-validation-for="Telephone" class="text-danger"></span>
          </div>
          <div class="form-group col-2">
            <label asp-for="Record" class="control-label">Matrícula</label>
            <input asp-for="Record" class="form-control" placeholder="Matrícula">
            <span asp-validation-for="Record" class="text-danger"></span>
          </div>
          <div class="form-group col-12">
            <button type="submit" class="btn btn-primary float-right">Cadastrar</button>
          </div>
        </div>
      </form>

      <div class="row" id="divLoader">
        <div class="col-md-12 text-center">
          <h1>Aguarde, carregando...</h1>
        </div>
      </div>

      <div style="display:none" id="divTableStudents">
        <table id="tblStudents" class="table table-striped table-bordered dt-responsive nowrap mt-4" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
